<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="13"
    android:orientation="horizontal"
     >

    <android.support.v7.widget.Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" />

    <android.support.v7.widget.Space
        android:id="@+id/Space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="12"
        android:layout_gravity="fill_vertical"
        android:layout_row="11" />


    <Button
        android:id="@+id/Button03"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/Button05"
        android:layout_alignBottom="@+id/Button05"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/Button05"
        android:text="9" />

    <Button
        android:id="@+id/Button08"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/Button05"
        android:layout_alignBottom="@+id/Button05"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:text="7" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/Button08"
        android:text="8" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/Button08"
        android:layout_marginBottom="21dp"
        android:layout_toLeftOf="@+id/Button05"
        android:text="4" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/Button01"
        android:layout_alignBottom="@+id/Button01"
        android:layout_toLeftOf="@+id/Button03"
        android:text="5" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/Button02"
        android:layout_alignBottom="@+id/Button02"
        android:layout_alignLeft="@+id/Button03"
        android:text="6" />

    <Button
        android:id="@+id/Button06"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/Button01"
        android:layout_marginBottom="32dp"
        android:layout_toLeftOf="@+id/Button05"
        android:text="1" />

    <Button
        android:id="@+id/Button07"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/Button06"
        android:layout_alignBottom="@+id/Button06"
        android:layout_toLeftOf="@+id/Button03"
        android:text="2" />

    <Button
        android:id="@+id/Button09"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/Button07"
        android:layout_alignBottom="@+id/Button07"
        android:layout_alignLeft="@+id/Button04"
        android:text="3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:gravity="center_horizontal"
        android:text="$0.00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button08"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Button03"
        android:text="0" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Amount Given"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="44dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="98dp"
        android:text="Amount Due"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="44dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/Button06"
        android:gravity="center_horizontal"
        android:text="$0.00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Button09"
        android:layout_marginRight="28dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cart" />

</RelativeLayout>