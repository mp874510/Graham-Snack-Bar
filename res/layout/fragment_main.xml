<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="5dp"
    tools:context="com.example.activites.MainActivity$PlaceholderFragment"
      android:background="@drawable/background"
      android:id="@+id/Rel1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zero"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/pizza"
        android:background="@drawable/box"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/pizza"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/pizza" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView1"
        android:text="$ 0.00"
        android:onClick="checkout" />

    <TextView
        android:id="@+id/AmountDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/zero"
        android:layout_alignBottom="@+id/zero"
        android:layout_toLeftOf="@+id/zero"
        android:text="Total"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/ImageButton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/pizza"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/pizza"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:scaleType="fitCenter"
        android:src="@drawable/hotdog"
        android:onClick="buyItem" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/ImageButton2"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/ImageButton2"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/gatorade" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/ImageButton01"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/ImageButton01"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/water" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ImageButton2"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/nachos" />

    <ImageButton
        android:id="@+id/ImageButton05"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/ImageButton03"
        android:layout_toLeftOf="@+id/ImageButton02"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/soda" />

    <ImageButton
        android:id="@+id/ImageButton04"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/ImageButton05"
        android:layout_toLeftOf="@+id/ImageButton01"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/candybar" />

    <ImageButton
        android:id="@+id/ImageButton06"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/ImageButton02"
        android:layout_below="@+id/ImageButton02"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/carmel" />

    <ImageButton
        android:id="@+id/ImageButton08"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/ImageButton06"
        android:layout_marginLeft="47dp"
        android:layout_toRightOf="@+id/ImageButton02"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/popcorn" />

    <ImageButton
        android:id="@+id/ImageButton07"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/ImageButton08"
        android:layout_alignTop="@+id/ImageButton06"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="buyItem"
        android:scaleType="fitCenter"
        android:src="@drawable/licorice" />

    <ImageButton
        android:id="@+id/ImageButton09"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/zero"
        android:layout_marginRight="41dp"
        android:layout_toLeftOf="@+id/AmountDue"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:onClick="clearOrder"
        android:scaleType="fitCenter"
        android:src="@drawable/trashcan" />

</RelativeLayout>